{
  "manifest_version": 3,
  "name": "TimbrApp Extension",
  "version": "1.3.0",
  "description": "__MSG_description__",
  "author": {
    "email": "fvlgnn@gmail.com"
  },
  "homepage_url": "https://github.com/fvlgnn/timbrapp-extension",
  "default_locale": "en",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "TimbrApp Extension"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
